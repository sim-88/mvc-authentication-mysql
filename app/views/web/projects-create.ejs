            <script>
                document.getElementById('createproject-form').addEventListener('submit', async function (e) {
                    e.preventDefault();

                    const formData = new FormData(this);
                    const response = await fetch('/createproject', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();
                    if (response.ok) {
                        alert('Project created successfully');
                        // Optionally redirect to another page or reset the form
                    } else {
                        alert('Error creating project: ' + result.error);
                    }
                });
            </script>
